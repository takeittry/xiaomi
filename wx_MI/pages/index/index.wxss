/* pages/index/index.wxss */
.section{
  width: 100%;
}
/* 搜索框 */
.searchBar{
  height: 100rpx;
  display: flex;
  justify-content: center;
  background: #ff6700;
}
.searchBar .search_box{
  display: inline-block;
  height: 60rpx;
  width:95%;
  margin-top: 26rpx;
  border-radius: 40rpx;
  background-color: #fff;
  text-align: center;
}
.search-plac{
  text-align: center;
  font-size: 11pt;
  margin-top: 4rpx;
}
.search_icon{
  position: absolute;
  left: 36%;
  top: 35rpx;
  width: 44rpx;
  height: 44rpx;
}
/* 轮播图 */
.section-swiper .slide{
  height:370rpx;
}
.section-swiper .slide image{
  width:100%;
  height: 370rpx;
}
/* nav导航栏 */
.navBar{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  height: 160rpx;
  background: #fff;
}
.nav-list{
  display: flex;
  justify-content: center;
  align-items: center;
}
.nav-item{
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  margin: 0 36rpx;
}
.nav-item .item-img{
  display: inline-block;
  width: 80rpx;
  height: 80rpx;
}
.nav-item .item-text{
  font-size: 13px;
  color: #999;
}
/* 首页活动 */
.activity{
  display: flex;
  flex-direction: column;
  margin-top: 6rpx;
}
.up{
  display: flex;
  flex-direction: row;
  height: 490rpx;
  width: 100%;
  background: #fff;
}
.left-list{
  height: 490rpx;
  width: 358rpx;
}
.left-list image{
  width: 358rpx;
  display: inline-block;
  margin: 4rpx 4rpx 0 0;
}
.right-list{
  display: flex;
  flex-direction: column;
  height: 490rpx;
  flex: 1;
}
.right-list image{
  display: inline-block;
  height: 238rpx;
  width: 390rpx;
  margin: 4rpx 0 0 4rpx;
}
.block{
  display: flex;
  flex-direction: column;
  align-content: center;
}
.cover{
  display: inline-block;
  height: 440rpx;
  margin-top: 4rpx;
  background: #fff;
}
.cover-img{
  width: 100%;
}
.goods-list{
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
  align-items: center;
  margin-top: 0rpx;
  background: #fff;
}
.goods-item{
  width: 360rpx;
  margin-bottom: 30rpx;
}
.goods-item:nth-child(1),.goods-item:nth-child(2){
  margin-top: 8rpx;
}
.goods-item .goods-img{
  position: relative;
  width: 360rpx;
  height: 360rpx;
  box-shadow: 0 0 6rpx #dcdcdc;
}

.goods-img.new:before{      /*新品标签样式*/
  position: absolute;
  left: 0;
  top: 0;
  width: 100rpx;
  height: 40rpx;
  line-height: 40rpx;
  content: "新品";
  color: #fff;
  font-size: 9pt;
  text-align: center;
  background: #8CC64A;
}
.goods-img.on-sale:before{   /*立减标签样式*/
  position: absolute;
  left: 0;
  top: 0;
  width: 100rpx;
  height: 40rpx;
  line-height: 40rpx;
  content: "立减";
  font-size: 9pt;
  color: #fff;
  text-align: center;
  background: #ec6055;
}
.goods-item text{
  line-height: 40rpx;
  word-spacing: 10rpx;
}
.goods-item text:nth-child(1),.goods-item text:nth-child(2),.goods-item text:nth-child(3){
  display: block;
  margin-left: 30rpx;
}
.goods-item .title{
  font-size: 11pt;
}
.goods-item .desp{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 9pt;
  color: #666;
}
.goods-item .meta{
  margin-left: 30rpx;
  font-size: 11pt;
  color: #ff4a00;
}
.goods-item .discount{
  display: inline-block;
  margin-left: 10rpx;
  font-size: 9pt;
  color: #666;
  text-decoration: line-through;
}
.bottom-line{
  font-size: 14px;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  color: #111;
}